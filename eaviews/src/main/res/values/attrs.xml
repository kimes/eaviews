<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinView">
        <attr name="state" format="integer" />
        <attr name="stateDefaultBackground" format="reference" />
        <attr name="stateSuccessBackground" format="reference" />
        <attr name="stateErrorBackground" format="reference" />

        <attr name="android:inputType" />

        <attr name="isOpenKeyboard" format="boolean" />
        <attr name="password" format="boolean" />
        <attr name="pinLength" format="integer" />

        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textFontWeight" format="integer" />
        <attr name="pinWidth" format="dimension" />
        <attr name="pinMarginRight" format="dimension" />
        <attr name="pinPaddingTop" format="dimension" />
        <attr name="pinPaddingBottom" format="dimension" />
        <attr name="pinTextBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="PinCodeView">
        <attr name="textCursorDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="PinKeyboardView">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="elevation" format="dimension" />
        <attr name="imageButtonPadding" format="dimension" />
        <attr name="pinView" format="reference" />
        <attr name="buttonBackground" format="reference" />
        <attr name="stateListAnimator" format="reference" />
    </declare-styleable>
    <declare-styleable name="ErrorEditText">
        <attr name="state_error" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ErrorSpinner" parent="ErrorEdiText">
        <attr name="state_error" />
    </declare-styleable>
</resources>